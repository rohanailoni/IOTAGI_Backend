<%- include ("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit
                <%=blog.title%>
            </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/blogs/<%=blog._id%>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <h5>Title</h5>
                        <input class="form-control" type="text" name="blog[title]" value="<%=blog.title%>">
                    </div>
                    <div class="form-group">
                        <h5>Description</h5>
                        <input class="form-control" type="text" name="blog[description]" value="<%=blog.description%>">
                    </div>
                    <div class="form-group">
                        <h5>Image URL</h5>
                        <input class="form-control" type="text" name="blog[image]" value="<%=blog.image%>">
                    </div>
                    <div class="form-group">
                        <h5>Medium link</h5>
                        <input class="form-control" type="text" name="blog[link]" value="<%=blog.link%>">
                    </div>
                    <div class="form-group">

                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/blogs">Go Back</a>
            </div>
        </div>
    </div>
    <%- include ("../partials/footer") %>