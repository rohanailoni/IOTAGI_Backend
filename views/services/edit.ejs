<%- include ("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit
                <%=service.title%>
            </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/services/<%=service._id%>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <h5>Title</h5>
                        <input class="form-control" type="text" name="service[name]" value="<%=service.name%>">
                    </div>
                    <div class="form-group">
                        <h5>Description</h5>
                        <input class="form-control" type="text" name="service[description]" value="<%=service.description%>">
                    </div>
                    <div class="form-group">
                        <h5>Image URL</h5>
                        <input class="form-control" type="text" name="service[image]" value="<%=service.image%>">
                    </div>
                    <div class="form-group">
                        <h5>Price:</h5>
                        <input class="form-control" type="text" name="service[price]" value="<%=service.price%>">
                    </div>
                    <div class="form-group">

                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/services">Go Back</a>
            </div>
        </div>
    </div>
    <%- include ("../partials/footer") %>